[core]
  excludesfile = ~/.gitignore
  editor = subl -w
[user]
  name = Patrik Affentranger
  email = patrik.affentranger@gmail.com
[push]
  default = current
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[mergetool "sourcetree"]
  cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
  trustExitCode = true